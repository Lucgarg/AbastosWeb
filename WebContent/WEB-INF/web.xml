<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>abastos</display-name>


	<welcome-file-list>

		<welcome-file>precreate</welcome-file>

	</welcome-file-list>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
		<listener>
    <listener-class>com.abastos.market.web.filters.WebInitListener</listener-class>
</listener>
	<filter>
		<filter-name>InitSessionFilter</filter-name>
		<filter-class>com.abastos.market.web.filters.InitSessionFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>InitSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>ImagenFilter</filter-name>
		<filter-class>com.abastos.market.web.filters.ImagenFilter</filter-class>
	</filter>
		<filter-mapping>
		<filter-name>ImagenFilter</filter-name>
		<url-pattern>*.jpg</url-pattern>
	</filter-mapping>
	<error-page>
		<error-code>404</error-code>
		<location>/html/error/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/html/error/500.jsp</location>
	</error-page>
	<servlet>

		<servlet-name>PrecreateServlet</servlet-name>

		<servlet-class>com.abastos.market.web.controllers.PrecreateServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>PrecreateServlet</servlet-name>
		<url-pattern>/precreate</url-pattern>
	</servlet-mapping>
	<servlet>

		<servlet-name>CarritoServlet</servlet-name>

		<servlet-class>com.abastos.market.web.controllers.CarritoServlet</servlet-class>

	</servlet>
		<servlet-mapping>
		<servlet-name>UsuarioServlet</servlet-name>
		<url-pattern>/usuario</url-pattern>
	</servlet-mapping>
	<servlet>

		<servlet-name>UsuarioServlet</servlet-name>

		<servlet-class>com.abastos.market.web.controllers.UsuarioServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>CarritoServlet</servlet-name>
		<url-pattern>/carrito</url-pattern>
	</servlet-mapping>
	<servlet>

		<servlet-name>ProductoServlet</servlet-name>
		<servlet-class>com.abastos.market.web.controllers.ProductoServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>ProductoServlet</servlet-name>
		<url-pattern>/producto-public</url-pattern>
		<url-pattern>/producto-private</url-pattern>
	</servlet-mapping>

	<servlet>

		<servlet-name>TiendaServlet</servlet-name>
		<servlet-class>com.abastos.market.web.controllers.TiendaServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>TiendaServlet</servlet-name>
		<url-pattern>/tienda</url-pattern>
		<url-pattern>/tienda-private</url-pattern>
	</servlet-mapping>
	<servlet>

		<servlet-name>OfertaServlet</servlet-name>
		<servlet-class>com.abastos.market.web.controllers.OfertaServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>OfertaServlet</servlet-name>
		<url-pattern>/oferta</url-pattern>

	</servlet-mapping>
	<servlet>

		<servlet-name>PedidoServlet</servlet-name>
		<servlet-class>com.abastos.market.web.controllers.PedidoServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>PedidoServlet</servlet-name>
		<url-pattern>/pedido</url-pattern>
		<url-pattern>/pedido-private</url-pattern>
	</servlet-mapping>
	<servlet>

		<servlet-name>ValoracionServlet</servlet-name>
		<servlet-class>com.abastos.market.web.controllers.ValoracionServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>ValoracionServlet</servlet-name>
		<url-pattern>/valoracion</url-pattern>
	</servlet-mapping>

	<servlet>

		<servlet-name>ListaServlet</servlet-name>
		<servlet-class>com.abastos.market.web.controllers.ListaServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>ListaServlet</servlet-name>
		<url-pattern>/lista</url-pattern>

	</servlet-mapping>


	<filter>
		<filter-name>AuthenticationFilterParticular</filter-name>
		<filter-class>com.abastos.market.web.filters.AuthenticationFilterParticular</filter-class>
	</filter>
	<filter>
		<filter-name>AuthenticationFilterEmpresa</filter-name>
		<filter-class>com.abastos.market.web.filters.AuthenticationFilterEmpresa</filter-class>
	</filter>
	<filter>
		<filter-name>AuthenticationFilterUsuario</filter-name>
		<filter-class>com.abastos.market.web.filters.AuthenticationFilterUsuario</filter-class>
	</filter>
	<filter>
		<filter-name>UserParticularFilter</filter-name>
		<filter-class>com.abastos.market.web.filters.UserParticularFilter</filter-class>
	</filter>
	<filter>
		<filter-name>TiendaSessionFilter</filter-name>
		<filter-class>com.abastos.market.web.filters.TiendaSessionFilter</filter-class>
	</filter>
	<filter>
		<filter-name>AllUsersFilter</filter-name>
		<filter-class>com.abastos.market.web.filters.AllUsersFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AuthenticationFilterParticular</filter-name>
		<url-pattern>/html/particular/private/*</url-pattern>
		<url-pattern>/html/pedido/*</url-pattern>
		<url-pattern>/valoracion</url-pattern>
		<url-pattern>/lista</url-pattern>
		<url-pattern>/pedido-private</url-pattern>



	</filter-mapping>

	<filter-mapping>
		<filter-name>AuthenticationFilterEmpresa</filter-name>
		<url-pattern>/html/empresa/private/*</url-pattern>
		<url-pattern>/producto-private*</url-pattern>
		<url-pattern>/oferta</url-pattern>
		<url-pattern>/tienda-private</url-pattern>

	</filter-mapping>

	<filter-mapping>
		<filter-name>AuthenticationFilterUsuario</filter-name>
		<url-pattern>/html/empresa/registrar.jsp</url-pattern>
		<url-pattern>/html/particular/registrar.jsp</url-pattern>

	</filter-mapping>
	<filter-mapping>
		<filter-name>UserParticularFilter</filter-name>
		<url-pattern>/carrito</url-pattern>
		<url-pattern>/precreate</url-pattern>
		<url-pattern>/pedido</url-pattern>
		<url-pattern>/tienda</url-pattern>
		<url-pattern>/</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>TiendaSessionFilter</filter-name>
		<url-pattern>/producto-public</url-pattern>
		<url-pattern>/producto-private</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AllUsersFilter</filter-name>
		<url-pattern>/html/commons/*</url-pattern>
		<url-pattern>/html/pedido/*</url-pattern>
		<url-pattern>/html/producto/*</url-pattern>
		<url-pattern>/html/tienda/*</url-pattern>
		<url-pattern>/html/particular/private/lista</url-pattern>
		<url-pattern>/html/particular/private/pedido</url-pattern>
		<url-pattern>/html/particular/private/valoracion</url-pattern>
		<url-pattern>/html/empresa/private/oferta</url-pattern>
		<url-pattern>/html/empresa/private/producto</url-pattern>
		<url-pattern>/html/empresa/private/tienda</url-pattern>
	</filter-mapping>





</web-app>